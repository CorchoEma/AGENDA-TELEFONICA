@model TODO_MVC_NETCORE.DTOs.ResponseContactoDTO

@{
    ViewData["Title"] = "FormularioEditarContacto";
}

<h1>Editar Contacto</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FormularioEditarContacto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdContacto" />
            <div class="form-group">
                <label asp-for="NombreContacto" class="control-label"></label>
                <input asp-for="NombreContacto" class="form-control" />
                <span asp-validation-for="NombreContacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoContacto" class="control-label"></label>
                <input asp-for="ApellidoContacto" class="form-control" />
                <span asp-validation-for="ApellidoContacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoContacto" class="control-label"></label>
                <input asp-for="TelefonoContacto" class="form-control" />
                <span asp-validation-for="TelefonoContacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver...</a>
</div>
